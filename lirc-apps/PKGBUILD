# Maintainer: Rexct <rexct1 at gmail dot com>
pkgname=lirc-apps
pkgver=0.8.2
pkgrel=16
pkgdesc="Linux Infrared Remote Control Application"
arch=('sh4')
url="http://www.lirc.org/"
license=('GPL2')
groups=(lirc)
depends=()
optdepends=()
makedepends=()
provides=()
conflicts=()
backup=()
options=('!ccache')
install=
changelog=$pkgname.changelog
source=(stlinux23-sh4-$pkgname-$pkgver-$pkgrel.sh4.rpm::http://ftp.stlinux.com/pub/stlinux/2.3/STLinux/sh4/stlinux23-sh4-${pkgname}-${pkgver}-${pkgrel}.sh4.rpm 
        lircd.conf)
noextract=()
md5sums=('c2731525206c8208e0109900303cc3db'
         'c6a6babd0c9137b6370e5b628245ba4f')
         
build() {
cd "${srcdir}"
rpm2cpio stlinux23-sh4-$pkgname-$pkgver-$pkgrel.sh4.rpm | bsdtar -xf -

}

package() {
  cd "${srcdir}"
  cp -dr --no-preserve=ownership opt/STM/STLinux-2.3/devkit/sh4/target/{etc,usr} "${pkgdir}"/
  rm "${pkgdir}"/etc/lircd.conf
  cp --no-preserve=ownership lircd.conf "${pkgdir}"/etc/lircd.conf
}
