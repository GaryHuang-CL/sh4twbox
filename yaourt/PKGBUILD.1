pkgname=yaourt
pkgver=1.3
pkgrel=1.1
pkgdesc="A pacman wrapper with extended features and AUR support"
arch=('any')
url="http://www.archlinux.fr/yaourt-en/"
license=(GPL)
depends=('diffutils' 'pacman>=4.1' 'package-query>=1.0' 'gettext')
optdepends=('aurvote: vote for favorite packages from AUR'
      'customizepkg: automatically modify PKGBUILD during install/upgrade'
      'rsync: retrieve PKGBUILD from official repositories')
backup=('etc/yaourtrc' 'etc/pacman.src.conf')
source=(http://mir.archlinux.fr/~tuxce/releases/$pkgname/$pkgname-$pkgver.tar.gz
pacman.src.conf
yaourt2
)
md5sums=('972173967acd160c987c6dce15a431f8'
         '6e3c7ea0b2759ef9361d1763a190b154'
         '3f678138727d76596c1f4ccef9baad30')

build() { 
  cd "$srcdir/$pkgname-$pkgver/"
  make PREFIX=/usr sysconfdir=/etc localstatedir=/var 
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  make PREFIX=/usr sysconfdir=/etc localstatedir=/var DESTDIR="$pkgdir" install
  install -Dm644 ../pacman.src.conf  $pkgdir/etc/pacman.src.conf
  install -Dm755 ../yaourt2 $pkgdir/usr/bin/yaourt2
}

