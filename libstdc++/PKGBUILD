# Maintainer: Rexct <rexct1 at gmail dot com>
pkgname=libstdc++
pkgver=4.3.2
pkgrel=1
_rpmrel=7
pkgdesc="The GNU Standard C++ Library v3"
arch=('sh4')
url="http://gcc.gnu.org/libstdc++/"
license=('GPLv3')
groups=()
depends=()
optdepends=()
makedepends=()
provides=()
conflicts=('gcc-libs')
backup=()
options=('!ccache')
install=
changelog=
source=($pkgname-$pkgver-$_rpmrel.sh4.rpm::http://www.sh-linux.ssdev.jp/rpm-fc9/RPMS/sh4/${pkgname}-${pkgver}-${_rpmrel}.sh4.rpm )
noextract=()
md5sums=('f80a08bf542142ce715ad0f8e00a2688')

build() {
cd "${srcdir}"
rpm2cpio $pkgname-$pkgver-$_rpmrel.sh4.rpm | bsdtar -xf -
}

package() {
  cd "${srcdir}"
  cp -dr --no-preserve=ownership usr "${pkgdir}"/
  ln -s /usr/lib/libstdc++.so.6 "${pkgdir}"/usr/lib/libstdc++.so
}
